{
  "name": "vibbit-extension",
  "version": "0.2.0",
  "private": true,
  "description": "Build tooling for the Vibbit Chrome extension",
  "scripts": {
    "build": "node scripts/build.mjs",
    "build:watch": "node --watch scripts/build.mjs",
    "sync:compat-core": "node scripts/sync-compat-core.mjs",
    "check:compat-core": "node scripts/sync-compat-core.mjs --check",
    "dev:watch-reload": "node scripts/dev/watch-build-reload.mjs",
    "package": "npm run build && node scripts/package.mjs",
    "backend:start": "node apps/backend/src/server.mjs",
    "backend:dev": "node --watch apps/backend/src/server.mjs",
    "audit:smoke": "node scripts/audit/smoke.mjs",
    "audit:live": "node scripts/audit/live.mjs",
    "audit:install": "npx playwright install chromium"
  },
  "devDependencies": {
    "canvas": "^3.2.1",
    "playwright": "^1.58.2"
  }
}
